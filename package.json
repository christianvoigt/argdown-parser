{
  "name": "@argdown/parser",
  "description": "A parser for the Argdown argumentation syntax",
  "keywords": [
    "argumentation",
    "parser",
    "argument mapping",
    "Argdown",
    "Markdown",
    "Chevrotain"
  ],
  "version": "0.8.7",
  "license": "MIT",
  "main": "./lib/src/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.49",
    "@types/chai": "^4.1.3",
    "@types/js-yaml": "^3.11.1",
    "@types/lodash": "^4.14.109",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.3.1",
    "chevrotain": "git+https://github.com/SAP/chevrotain.git",
    "eventemitter3": "^3.0.0",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.10",
    "mdurl": "^1.0.1",
    "punycode": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianvoigt/argdown-parser"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "browserslist": "last 2 versions, ie 10",
  "scripts": {
    "deploy": "npm run test && npm run build && npm version patch && npm run push",
    "type-check": "tsc --noEmit",
    "build": "npm run clean && npm run build:src && npm run build:tests && npm run copy:argdown && npm run copy:css",
    "build:src": "tsc --emitDeclarationOnly && babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps",
    "build:tests": "tsc --emitDeclarationOnly && babel test --out-dir lib/test --extensions \".ts,.tsx\" --source-maps",
    "build:documentation": "typedoc  --options ./typedoc.js",
    "copy:argdown": "copyfiles \"test/**/*.{ad,argdown}\" lib/test",
    "copy:css": "copyfiles \"src/**/*.css\" lib/src",
    "test": "mocha --require ./babel-polyfill.js --colors \"./test/**/*.spec.ts\"",
    "test:lexer": "mocha --require ./babel-polyfill.js --colors \"./test/lexer.spec.ts\"",
    "test:parser": "mocha --require ./babel-polyfill.js --colors \"./test/parser.spec.ts\"",
    "test:model": "mocha --require ./babel-polyfill.js --colors \"./test/ModelPlugin.spec.ts\"",
    "test:map": "mocha --require ./babel-polyfill.js --colors \"./test/MapPlugin.spec.ts\"",
    "test:coverage": "nyc --reporter=html --reporter=text mocha ./test/**/*.spec.ts",
    "report": "nyc report",
    "clean": "rimraf lib/*",
    "prepare": "npm run-script build",
    "push": "git push --tags origin HEAD:master"
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.32",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.32",
    "@babel/preset-env": "7.0.0-beta.49",
    "@babel/preset-typescript": "7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "glob": "^7.1.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "typedoc": "^0.11.1",
    "typescript": "~2.9.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "./babel-polyfill.js"
    ]
  }
}
