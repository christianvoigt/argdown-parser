{
  "name": "argdown-parser-chevrotain-test",
  "version": "0.0.1",
  "license": "MIT",
  "main": "lib/src/index.js",
  "dependencies": {
    "chevrotain": "0.23.0",
    "lodash": "^4.17.4"
  },
  "bin": {
    "argdown": "./lib/src/cli/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianvoigt/argdown-parser-chevrotain-test"
  },
  "author": {
    "name": "Christian Voigt",
    "email": "1pxsolidblack@gmail.com"
  },
  "scripts": {
    "build": "npm run build:src && npm run build:tests && npm run build:copy-argdown-files",
    "build:src": "babel src/ -d lib/src --source-maps",
    "build:tests": "babel test/ -d lib/test --source-maps",
    "build:copy-argdown-files": "cpx 'test/**/*.{ad,argdown}' lib/test",
    "test": "mocha --compilers js:babel-core/register --colors ./test/*.spec.js",
    "test:parser": "mocha --compilers js:babel-core/register --colors ./test/parser.spec.js",
    "test:lib": "mocha --require source-map-support/register --colors ./lib/test/*.spec.js",
    "test:watch": "mocha --require source-map-support/register --compilers --colors -w ./lib/test/*.spec.js",
    "prepublish": "npm build"
  },
  "readmeFilename": "Readme.md",
  "preferGlobal": true,
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "chai": "^3.5.0",
    "cpx": "^1.5.0",
    "eslint": "^3.15.0",
    "eslint-loader": "^1.6.1",
    "karma": "^1.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon": "^1.0.5",
    "mocha": "^3.2.0",
    "sinon": "^1.17.7",
    "source-map-support": "^0.4.11",
    "webpack": "^2.2.1",
    "yargs": "^6.6.0"
  }
}
